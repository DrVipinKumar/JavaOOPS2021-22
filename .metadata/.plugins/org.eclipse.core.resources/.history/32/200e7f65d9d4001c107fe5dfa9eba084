package ExceptionHandling;

import java.util.Scanner;

class Division {
	int num1, num2;
		
	void getDivision() throws ArithmeticException {
		Scanner in =new Scanner(System.in);
		System.out.println("Enter number 1");
		num1=in.nextInt();
		System.out.println("Enter number 2");
		num2=in.nextInt();
		int div =num1/num2;
		System.out.println("Division of 2 number is =%d".formatted(div));
	}
}
public class DividebyZeroExceptionEx {

	public static void main(String[] args)  {
		// TODO Auto-generated method stub
		System.out.println("This line is in starting of main method");
            Division d =new Division();
            d.getDivision();
            System.out.println("This line is after division result in main method");
	}

}
